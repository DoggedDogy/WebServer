@model WebServer.Models.Group
@{
    ViewData["Title"] = "Добавление группы";
}
<div class="row">
    <div class="col-md-4">
        <h4>Группа</h4>
        <hr />
        <form asp-action="CreateGroup">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Group_Number" class="control-label">Номер</label>
                <input asp-for="Group_Number" class="form-control" />
                <span asp-validation-for="Group_Number" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Specialty" class="control-label">Специальность</label>
                <input asp-for="Specialty" class="form-control" />
                <span asp-validation-for="Specialty" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Year" class="control-label">Год</label>
                <input asp-for="Year" class="form-control" />
                <span asp-validation-for="Year" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Teacher_Id" class="control-label">Преподаватель</label>
                <select asp-for="Teacher_Id" id="roleSelect" class="form-control" asp-items="@ViewBag.TeacherList">
                    <option value="">Выберите преподавателя</option>
                </select>
                <span asp-validation-for="Teacher_Id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="CreateGroup" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<div>
    <a asp-action="Groups">Назад к списку</a>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
