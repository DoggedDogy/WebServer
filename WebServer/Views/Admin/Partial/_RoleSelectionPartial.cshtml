@model WebServer.Models.UserRoleClaim

<div class="form-group">
    <label asp-for="Role_Id" class="control-label">Роль</label>
    <select asp-for="Role_Id" id="roleSelect" class="form-control" asp-items="@ViewBag.RoleList">
        <option value="0">Выберите роль</option>
    </select>
    <span asp-validation-for="Role_Id" class="text-danger"></span>
</div>

<div class="form-group d-none" id="groupSelect">
    <partial name="../Admin/Partial/_GroupSelectionPartial" model="@ViewBag.Student" />
</div>
<script type="text/javascript">
    $('#roleSelect').on('change', function () {
        if ($(this).children('option:selected').val() == '1') {
            $('#groupSelect').removeClass("d-none");
        }
        else {
            $('#groupSelect').addClass("d-none"); 
        }
    });
</script>
